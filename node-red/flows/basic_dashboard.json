    {
        "id": "process_status",
        "type": "function",
        "z": "upcycle_pro_tab",
        "name": "Process Status",
        "func": "// Procesar datos de estado del sistema\nconst topic = msg.topic;\nconst data = msg.payload;\n\n// Extraer el subtÃ³pico (system, motor, servos, display)\nconst subtopic = topic.split('/').pop();\n\nswitch(subtopic) {\n    case 'system':\n        msg.system_state = data.state || 'UNKNOWN';\n        msg.selected_mode = data.mode || 0;\n        break;\n    case 'motor':\n        msg.motor_running = data.running || false;\n        break;\n    case 'servos':\n        msg.servo1_state = data.servo1 || 'idle';\n        msg.servo2_state = data.servo2 || 'idle';\n        msg.servo3_state = data.servo3 || 'idle';\n        break;\n    case 'display':\n        msg.display_content = data.content || 'Unknown';\n        break;\n}\n\n// Timestamp\nmsg.timestamp = new Date().toISOString();\n\nreturn msg;",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 450,
        "y": 320,
        "wires": [["update_status_display"]]
    },
    {
        "id": "process_sensors",
        "type": "function",
        "z": "upcycle_pro_tab",
        "name": "Process Sensors",
        "func": "// Procesar datos de sensores PIR\nconst topic = msg.topic;\nconst data = msg.payload;\n\n// Extraer el sensor (pir1, pir2, pir3)\nconst sensor = topic.split('/').pop();\n\nswitch(sensor) {\n    case 'pir1':\n        msg.pir1_active = data.active || false;\n        msg.pir1_count = data.count || 0;\n        break;\n    case 'pir2':\n        msg.pir2_active = data.active || false;\n        msg.pir2_count = data.count || 0;\n        break;\n    case 'pir3':\n        msg.pir3_active = data.active || false;\n        msg.pir3_count = data.count || 0;\n        break;\n}\n\n// Timestamp\nmsg.timestamp = new Date().toISOString();\n\nreturn msg;",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 450,
        "y": 360,
        "wires": [["update_sensor_display"]]
    },
    {
        "id": "update_status_display",
        "type": "function",
        "z": "upcycle_pro_tab",
        "name": "Update Status UI",
        "func": "// Actualizar elementos de UI con datos de estado\nconst messages = [];\n\n// Sistema general\nif (msg.system_state) {\n    messages.push({\n        topic: 'system_state_text',\n        payload: msg.system_state\n    });\n    \n    // Color segÃºn estado\n    let color = 'grey';\n    if (msg.system_state === 'WAITING') color = 'orange';\n    else if (msg.system_state === 'PROCESSING') color = 'blue';\n    else if (msg.system_state === 'IDLE') color = 'green';\n    \n    messages.push({\n        topic: 'system_state_led',\n        payload: color\n    });\n}\n\n// Motor\nif (typeof msg.motor_running !== 'undefined') {\n    messages.push({\n        topic: 'motor_status_text',\n        payload: msg.motor_running ? 'RUNNING' : 'STOPPED'\n    });\n    \n    messages.push({\n        topic: 'motor_status_led',\n        payload: msg.motor_running ? 'green' : 'red'\n    });\n}\n\n// Modo seleccionado\nif (msg.selected_mode) {\n    const modes = ['NONE', 'VIDRIO', 'PLASTICO', 'METAL'];\n    messages.push({\n        topic: 'selected_mode_text',\n        payload: modes[msg.selected_mode] || 'UNKNOWN'\n    });\n}\n\nreturn [messages];",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 680,
        "y": 320,
        "wires": [["status_text_system", "status_led_system", "status_text_motor", "status_led_motor", "status_text_mode"]]
    },
    {
        "id": "update_sensor_display",
        "type": "function",
        "z": "upcycle_pro_tab",
        "name": "Update Sensors UI",
        "func": "// Actualizar elementos de UI con datos de sensores\nconst messages = [];\n\n// PIR 1 (VIDRIO)\nif (typeof msg.pir1_active !== 'undefined') {\n    messages.push({\n        topic: 'pir1_led',\n        payload: msg.pir1_active ? 'green' : 'grey'\n    });\n}\n\nif (msg.pir1_count) {\n    messages.push({\n        topic: 'pir1_count',\n        payload: msg.pir1_count\n    });\n}\n\n// PIR 2 (PLASTICO)\nif (typeof msg.pir2_active !== 'undefined') {\n    messages.push({\n        topic: 'pir2_led',\n        payload: msg.pir2_active ? 'green' : 'grey'\n    });\n}\n\nif (msg.pir2_count) {\n    messages.push({\n        topic: 'pir2_count',\n        payload: msg.pir2_count\n    });\n}\n\n// PIR 3 (METAL)\nif (typeof msg.pir3_active !== 'undefined') {\n    messages.push({\n        topic: 'pir3_led',\n        payload: msg.pir3_active ? 'green' : 'grey'\n    });\n}\n\nif (msg.pir3_count) {\n    messages.push({\n        topic: 'pir3_count',\n        payload: msg.pir3_count\n    });\n}\n\nreturn [messages];",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 680,
        "y": 360,
        "wires": [["pir1_led", "pir2_led", "pir3_led", "pir1_counter", "pir2_counter", "pir3_counter"]]
    },
